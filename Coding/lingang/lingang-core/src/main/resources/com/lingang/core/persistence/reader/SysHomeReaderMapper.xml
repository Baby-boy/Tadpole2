<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lingang.core.persistence.reader.SysHomeReaderMapper" >
  <resultMap id="BaseResultMap" type="com.lingang.api.domain.entity.SysHome" >
    <id column="home_id" property="homeId" jdbcType="INTEGER" />
    <result column="user_id" property="userId" jdbcType="INTEGER" />
    <result column="img_id" property="imgId" jdbcType="INTEGER" />
    <result column="home_order" property="homeOrder" jdbcType="INTEGER" />
    <result column="home_name" property="homeName" jdbcType="VARCHAR" />
  </resultMap>
    <resultMap id="SysHomeResultMap" type="com.lingang.api.domain.vo.SysHomeVo" extends="BaseResultMap">
    <result column="img_path" property="imgPath" jdbcType="VARCHAR" />
   </resultMap>
  <sql id="Base_Column_List" >
    home_id, user_id, img_id, home_order, home_name
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from sys_home
    where home_id = #{homeId,jdbcType=INTEGER}
  </select>
  <select id="selectSysHomeCount" resultType="java.lang.Integer" parameterType="java.lang.Integer" >
  SELECT COUNT(home_id) from sys_home
  </select>
  <select id="selectSysHomePageList" resultMap="SysHomeResultMap" parameterType="java.util.Map" >
   SELECT TOP ${map.onePageCount} sh.home_id,sh.img_id,sm.img_path,sh.home_order,sh.home_name from sys_home sh
   LEFT JOIN (SELECT * from sys_images where img_state=1) sm on sh.img_id=sm.img_id
   WHERE sh.home_id NOT IN
   (SELECT TOP (${map.onePageCount}*${map.startIndex}) home_id from sys_home)
  </select>
  
  <select id="selectSysHomeByUserId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from sys_home
    where user_id = #{userId,jdbcType=INTEGER}
  </select>
</mapper>