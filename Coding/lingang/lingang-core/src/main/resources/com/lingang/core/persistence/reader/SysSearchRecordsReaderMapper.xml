<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lingang.core.persistence.reader.SysSearchRecordsReaderMapper" >
  <resultMap id="BaseResultMap" type="com.lingang.api.domain.entity.SysSearchRecords" >
    <id column="search_id" property="searchId" jdbcType="INTEGER" />
    <result column="keywords" property="keywords" jdbcType="VARCHAR" />
    <result column="keywords_count" property="keywordsCount" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    search_id, keywords, keywords_count
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from sys_search_records
    where search_id = #{searchId,jdbcType=INTEGER}
  </select>

	<!-- 提供热搜词 -->
	<select id="selectHotSearch" resultMap="BaseResultMap">
		select keywords
		from sys_search_records
		order by keywords_count DESC
	</select>

	<select id="selectRecords" resultMap="BaseResultMap"
		parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from sys_search_records
		<where>
			1 = 1
			<if test="keywords != null and keywords !=''">
				and keywords = #{keywords,jdbcType=VARCHAR}
			</if>
		</where>
	</select>
</mapper>