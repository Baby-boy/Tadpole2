<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lingang.core.persistence.reader.SysLabelReaderMapper" >
  <resultMap id="BaseResultMap" type="com.lingang.api.domain.entity.SysLabel" >
    <id column="label_id" property="labelId" jdbcType="INTEGER" />
    <result column="label_name" property="labelName" jdbcType="VARCHAR" />
    <result column="label_type" property="labelType" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="label_state" property="labelState" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    label_id, label_name, label_type, create_time, update_time, label_state
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from sys_label
    where label_id = #{labelId,jdbcType=INTEGER}
  </select>
  <!-- 筛选：入驻企业 -->
   <select id="selectSysLabelByType" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
   select sl.label_id,sl.label_name,sl.label_type from sys_label sl where sl.label_type in (3,4,5,6,7) and sl.label_state=1
  </select>
  <!-- 查询出总数 -->
  <select id="selectSysLabelCount" resultType="java.lang.Integer" parameterType="java.util.Map" >
    select count(*)
    from sys_label sl
    <where>
    	1=1
    	<if test="map.labelType !=null and map.labelType !=''">
  			and sl.label_type in 
  			<foreach collection="map.labelType" item="labelType" open="(" close=")" separator=",">
					#{labelType}
			</foreach>
  		</if>
  		<if test="map.labelState !=null and map.labelState !=''">
  			and sl.label_state = #{map.labelState}
  		</if>
    </where>
  </select>
  
  <sql id="SQL_selectSysLabelPageList" >
		select
			sl.label_id,
			sl.label_name,
			sl.label_type,
			sl.create_time,
			sl.update_time,
			sl.label_state
		from
		sys_label sl
		<where>
    	1=1
    	<if test="map.labelType !=null and map.labelType !=''">
  			and sl.label_type in 
  			<foreach collection="map.labelType" item="labelType" open="(" close=")" separator=",">
					#{labelType}
			</foreach>
  		</if>
  		<if test="map.labelState !=null and map.labelState !=''">
  			and sl.label_state = #{map.labelState}
  		</if>
    </where>
	</sql>
	<sql id="SQL_ID_selectSysLabelPageList" >
		label_id
	</sql>
  
  <select id="selectSysLabelPageList" resultMap="BaseResultMap" parameterType="java.util.Map">
	SELECT TOP ${map.onePageCount}
		*
	FROM 
	(
		<include refid="SQL_selectSysLabelPageList" />
	)
	 t
	WHERE t.<include refid="SQL_ID_selectSysLabelPageList" /> 
	NOT IN
	(
		SELECT TOP (${map.onePageCount} * ${map.startIndex}) 
		nt.<include refid="SQL_ID_selectSysLabelPageList" /> 
		FROM 
		(
			<include refid="SQL_selectSysLabelPageList" />
		) nt order by create_time desc
	) 
	order by create_time desc;
  </select>
  
</mapper>