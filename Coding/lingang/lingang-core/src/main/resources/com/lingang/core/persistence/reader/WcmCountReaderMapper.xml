<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lingang.core.persistence.reader.WcmCountReaderMapper">
	<resultMap id="BaseResultMap" type="com.lingang.api.domain.entity.WcmCount">
		<id column="event_id" property="eventId" jdbcType="INTEGER" />
		<result column="doc_id" property="docId" jdbcType="INTEGER" />
		<result column="site_id" property="siteId" jdbcType="INTEGER" />
		<result column="click_count" property="clickCount" jdbcType="INTEGER" />
	</resultMap>

	<select id="selectWcmCountByDocIdAndSiteId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select event_id,doc_id,site_id,click_count
		from wcm_count 
		where doc_id=#{docId,jdbcType=INTEGER}
			and site_id=#{siteId,jdbcType=INTEGER}
	</select>
</mapper>