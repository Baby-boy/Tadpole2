<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd"
        >

    <description>Spring Mail Configuration</description>

    <!-- 属性占位符 -->
    <context:property-placeholder location="classpath:config.properties"
                                  ignore-resource-not-found="true"
                                  ignore-unresolvable="true"/>


    <!-- freemarker configuration context support -->
    <!--
    <bean id="fmkConfiguration" class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean">
        <property name="templateLoaderPath" value="/ftl/mail"/>
    </bean>
    -->

    <bean id="javaMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <!-- SMTP 服务器地址和端口 -->
        <property name="host" value="${mail.host}"/>
        <property name="port" value="${mail.port}"/>

        <!-- SMTP 发送邮件的用户名和密码 -->
        <property name="username" value="${mail.username}"/>
        <property name="password" value="${mail.password}"/>
        <property name="defaultEncoding" value="UTF-8"/>

        <!-- java mail属性 -->
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.from">${mail.username}</prop>
                <prop key="mail.smtp.auth">${mail.smtp.auth}</prop>
                <prop key="mail.smtp.timeout">${mail.smtp.timeout}</prop>
                <!-- SSL连接配置 -->
                <prop key="mail.smtp.starttls.enable">${mail.smtp.starttls.enable}</prop>
                <!--
                <prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
                -->
            </props>
        </property>
    </bean>
</beans>
